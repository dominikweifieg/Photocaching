<h1>Listing photos</h1>

<table>
  <tr>
    <th></th>
		<th>User</th>
    <th>Url</th>
    <th>Lat</th>
    <th>Lng</th>
		<th>locate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= link_to image_tag(photo.thumb), photo.url %></td>
		<td><%= photo.user_id %></td>
    <td><%= photo.url %></td>
    <td><%= photo.lat %></td>
    <td><%= photo.lng %></td>
		<td><%= link_to 'Locate', "http://maps.google.com/maps?q=#{photo.lat}+#{photo.lng}", :popup => true %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

