<h2>Pages</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th>Body</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.title %></td>
    <td><%=h page.permalink %></td>
    <td><%=h(safe_truncate(textilize(page.body), 60)) %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
		<td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

